  <div class="col-sm-12">
    <div id="user-block_title">
      <h1><%= @project.name %></h1>
    </div>
    <div class="block" id="user-block_content">
      <div class="block-content">
        <h3>Les utilisateurs souhaitant participer au projet</h3>
        <table class="table table-hovered">
          <thead>
            <tr>
              <th>Membre</th>
              <th>E-mail</th>
              <th>Ville</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
              <% @participants.each do | participant |  %>
              <tr>
                <td><%= image_tag participant.avatar, width: "40px",class:"user-image img-circle", height: "40px" %> <%= participant.username %></td>
                <td><%= participant.email %></td>
                <td><%= participant.city %></td>
                <td><%= link_to 'Contacter!', conversations_path(sender_id: current_user.id, recipient_id: participant.id), method: 'post'%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>