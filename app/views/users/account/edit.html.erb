<%= stylesheet_link_tag 'front/user/infos', media: 'all', 'data-turbolinks-track' => true %>
<div class="row">
  <div class="col-md-12">
    <h1>Editer mes informations</h1>
    <section id="user-infos_fields" class="form-horizontal " style="margin-top: 50px;">
      <%= form_for :user, :url => users_Update_url , :method => 'patch' do |f| %>
        <div class="form-group">
          <%= f.label :username, "Nom d'utilisateur: ", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :username, disabled: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email: ", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :email, disabled: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :first_name, "PrÃ©nom: ", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Nom: ", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "Avatar: ", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.file_field :avatar %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit :valider , class: "btn btn-primary  col-sm-10 col-sm-offset-2"%>
        </div>

      <% end %>
    </section>
  </div>
</div>
