<div class="container">
    <h3>Edition de commentaire</h3>
    <%= form_for @comment, :url =>{:action => "update", :id =>@comment} do |f| %>
      <input id="comment[commentable_type]" name="comment[commentable_type]" type="hidden" value="<%= @comment.commentable_type %>" />
      <input id="comment[commentable_id]" name="comment[commentable_id]" type="hidden" value="<%= @comment.commentable_id %>" />
      <%= f.text_area :content, class: "form-control", rows: "6", cols: "100"%>
      <%= f.submit :valider %>
    <% end %>
</div>